@model Alumnus
<div class="container">
    <h1><b>Murphy High School</b></h1>
    <br>
    <h3>Create your alumini account</h3>
    <br>
    <p>Already have an account? <a asp-action="Index" asp-controller="Login">Sign In</a></p>
    <br>
    <form asp-action="CreateAccount">
        <div class="form-row">
          
            <div class="form-group col-md-6">
                <label for="password">Create Password</label>
                <span style="color:red">*This field is required</span>
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Create Password">
            </div>
            <div class="form-group col-md-6">
                <label for="password">Confirm Password</label>
                <span style="color:red">*This field is required</span>
                <input type="password" class="form-control" id="password" placeholder="Confirm Password">
            </div>
            <br>
            <input type="submit" class="btn btn-primary pull-right" value="Create Account" />
        </div>

    </form>
</div>
